[add "interactive"]
	useBuiltin = true

[advice]
	detachedHead = false

[alias]
	s = status
	d = diff --staged
	rs = restore --staged
	ap = add -pu
    lin = linear
    bigclone = clone --filter=tree:0
    amend = commit --amend --no-edit
    fix = commit --fixup
    p = push -fu origin @
	git = !git
	pukk = pull
	r = restore
    rsw = restore --staged --worktree
	tlog = log --graph --oneline --all
	leash = push --force-with-lease

[blame]
	coloring = highlightRecent

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	features = line-numbers decorations

[user]
	name = Jade Lovelace
	email = software@lfcode.ca

[pull]
	ff = only

[push]
	default = current

[merge]
	conflictStyle = zdiff3

[diff]
    colorMoved = dimmed-zebra

[init]
	defaultBranch = main

[rerere]
	enabled = true

[cola]
	spellcheck = false

# rebase --autosquash by default
[rebase]
	autoSquash = true

# git clone -j8 by default
[submodule]
	fetchJobs = 8

# allow gerrit git hooks to run on git-revise
[revise "run-hooks"]
	commit-msg = true

